                    </FlexLayout>

                    <Frame Margin="20,24,20,0"
                           BackgroundColor="White"
                           HeightRequest="90"
                           CornerRadius="10"
                           HasShadow="False"
                           Padding="5">

                        <FlexLayout
                            Direction="Row"
                            AlignItems="Center"
                            JustifyContent="SpaceAround">
                            <Label Text="&#xf2bd;"
                                   TextColor="Black"
                                   FontSize="65"
                                   FontFamily="{StaticResource FontAwesomeSolid}" />
                            <StackLayout
                                Spacing="0">
                                <!--Nombres-->
                                <Label x:Name="LabelName"

                                       FontFamily="ArchivoSemiBold"
                                       TextColor="Black"
                                       FontSize="18" />
                                <!--Apellidos-->
                                <Label x:Name="LabelLastname"

                                       FontFamily="ArchivoSemiBold"
                                       TextColor="Black"
                                       FontSize="18" />
                            </StackLayout>


                            <Label
                                x:Name="LabelEditName"
                                Text="&#xf304;"
                                HeightRequest="65"
                                TextColor="#2F6A88"
                                FontSize="20"
                                FontFamily="{StaticResource FontAwesomeSolid}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Tapped="LabelEditName_OnTapped"
                                        NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>

                        </FlexLayout>

                    </Frame>

                    <!--ESTO ES CONDICIONAL-->
